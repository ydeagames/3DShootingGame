<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Label="PropertySheets" />
  <PropertyGroup Label="UserMacros" />

  <!-- 表示名 -->
  <PropertyGroup>
    <_PropertySheetDisplayName>ImGui</_PropertySheetDisplayName>
  </PropertyGroup>

  <!-- 共有設定 -->
  <PropertyGroup>
    <IncludePath>$(SolutionDir)ThirdParty/ImGui/Inc;$(IncludePath)</IncludePath>
    <LibraryPath Condition="!('$(RuntimeLibraryType)'=='LIB')">$(SolutionDir)ThirdParty/ImGui/Bin/MD/$(Platform)/$(Configuration);$(LibraryPath)</LibraryPath>
    <LibraryPath Condition="'$(RuntimeLibraryType)'=='LIB'">$(SolutionDir)ThirdParty/ImGui/Bin/MT/$(Platform)/$(Configuration);$(LibraryPath)</LibraryPath>
  </PropertyGroup>
  <ItemDefinitionGroup>
    <Link>
      <AdditionalDependencies>ImGui.lib;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>
</Project>